    "pascal.formatter.engine": "ptop",
    "pascal.formatter.enginePath": "C:\\GNU\\jcf_243_exe\\jcf.exe",
    "pascal.formatter.engineParameters": "C:\\GNU\\jcf_243_exe\\JCFSettings.cfg",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "gitlens.advanced.messages": {
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "line",
        "gutter",
        "overview"
    ],
    "gitlens.keymap": "none",
    "gitlens.menus": {
        "editor": false,
        "editorGroup": {
            "blame": true,
            "compare": true,
            "history": false,
            "remote": false
        },
        "editorTab": {
            "compare": false,
            "history": false,
            "remote": true
        },
        "explorer": {
            "compare": true,
            "history": true,
            "remote": true
        }
    },
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.blame.highlight.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.views.fileHistory.enabled": false,
    "gitlens.views.lineHistory.enabled": false,
    "gitlens.views.search.enabled": false,
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.views.compare.enabled": false,    
    "findrelated.applyRulesets": [
        "aspnet",
        "aspnet-mvc",
        "aurelia",
        "c/c++",
        "csharp",
        "minified",
        "Delphi"
    ],
    "findrelated.rulesets": [
        {
            "name": "Delphi",
            "rules": [
                {
                    "pattern": "(.*)\\.(?:dfm)$",
                    "locators": [
                        "$1.pas"
                    ]
                },
                {
                    "pattern": "(.*)\\.pas$",
                    "locators": [
                        "{$1.dfm}"
                    ]
                },
                {
                    "pattern": "(.*)\\.(?:dproj|cfg|dof|identcache|stat)$",
                    "locators": [
                        "$1.dpr"
                    ]
                },
                {
                    "pattern": "(.*)\\.dpr$",
                    "locators": [
                        "{$1.dproj,$1.cfg,$1.dof,$1.stat}"
                    ]
                }
            ]
        }
    ],
    "findrelated.openSideBySide": true,
    "bookmarks.navigateThroughAllFiles": true,
    "bookmarks.backgroundLineColor": "rgba(21, 126, 251, 0.1)",
    "numberedBookmarks.navigateThroughAllFiles": "false",
    "numberedBookmarks.gutterIconFillColor": "",
    "numberedBookmarks.gutterIconNumberColor": "",
    "numberedBookmarks.backgroundLineColor": "green",
    "liveshare.featureSet": "insiders",
    "workbench.colorTheme": "Min Dark"
