// Place your settings in this file to overwrite the default settings
{
		// Controls the font size.
	"editor.fontFamily": "Source Code Pro",
	"editor.fontSize": 14,
	"editor.wrappingColumn": 100,
	
	"files.encoding": "windows1252",
	
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		// pascal
		"**/*.ico": true,
		"**/*.{res,RES}": true,
		"**/*.rc": true,
		"**/*.bak?": true,
		"**/*.dcu": true,
		"**/*.rsb": true,
		"**/*.dfm": {"when": "$(basename).pas"},
		"**/*.~dfm": {"when": "$(basename).pas"},
		"**/*.ddp": {"when": "$(basename).pas"},
		"**/*.~ddp": {"when": "$(basename).pas"},
		"**/*.~pas": {"when": "$(basename).pas"},
		"**/*.exe": {"when": "$(basename).dpr"},
		"**/*.used": {"when": "$(basename).dpr"},
		// Delphi XE
		"__history/**": true,
		"**/*.local": true,
		
		// finalbuilder
		"**/*.fbl7": true,
		"**/*.fbpInf": true

	},

	"search.excludeFolders": [
		".git",
		"node_modules",
		"bower_components",
		"__history"
	],
    
    "codegnuglobal.encoding": "ISO-8859-1",

	
	"projectManager.sortList": "Name",
    "projectManager.codePath": "C:\\Program Files\\Microsoft VS Code\\Bin\\Code.cmd",
    "projectManager.openInNewWindow": false,
    	
	"tagged.tagString": "# #day/#month/#year - #enteredText",
	
	"bookmarks.saveBookmarksBetweenSessions": true,
    "bookmarks.navigateThroughAllFiles": true,
    "bookmarks.useStickyBookmarks": true,
	
    "numberedBookmarks.saveBookmarksBetweenSessions": true,
    
    "gitProjectManager.baseProjectsFolders": [
        "C:\\Users\\Alessandro\\Documents\\GitHub-Testing"
    ],
    
    //"pascal.format.indent": 3,
    "pascal.formatter.engine": "jcf",
    "pascal.formatter.enginePath": "C:\\Delphi\\JediCodeFormat\\bin\\jcf.exe",
    "pascal.formatter.engineParameters": "C:\\Delphi\\JediCodeFormat\\bin\\JCFSettings.cfg"
    // "pascal.formatter.engine": "ptop",
    // "pascal.formatter.enginePath": "C:\\FPC\\2.6.4\\bin\\i386-win32\\ptop.exe",
    // "pascal.formatter.engineParameters": ""
    //"pascal.formatter.engineParameters": "C:\\FPC\\2.6.4\\bin\\i386-win32\\ptop.cfg"
    
