    // "pascal.formatter.enginePath": "C:\\Program Files (x86)\\Embarcadero\\Studio\\20.0\\bin\\formatter.exe",
    // "pascal.formatter.engineParameters": "C:\\Users\\alefr\\AppData\\Roaming\\Embarcadero\\BDS\\20.0\\xx.config",
