// Place your settings in this file to overwrite the default settings
{
		// Controls the font size.
	"editor.fontFamily": "Source Code Pro",
	"editor.fontSize": 12,
	"editor.wrappingColumn": 100,
	
	"files.encoding": "windows1252",
	
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		// pascal
		"**/*.ico": true,
		"**/*.{res,RES}": true,
		"**/*.rc": true,
		"**/*.bak?": true,
		"**/*.dcu": true,
		"**/*.rsb": true,
		"**/*.dfm": {"when": "$(basename).pas"},
		"**/*.~dfm": {"when": "$(basename).pas"},
		"**/*.ddp": {"when": "$(basename).pas"},
		"**/*.~ddp": {"when": "$(basename).pas"},
		"**/*.~pas": {"when": "$(basename).pas"},
		"**/*.exe": {"when": "$(basename).dpr"},
		"**/*.used": {"when": "$(basename).dpr"},
		// Delphi XE
		"__history/**": true,
		"**/*.local": true,
		
		// finalbuilder
		"**/*.fbl7": true,
		"**/*.fbpInf": true

	},

	"search.excludeFolders": [
		".git",
		"node_modules",
		"bower_components",
		"__history"
	]
}